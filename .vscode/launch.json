{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sphinx Autobuild",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/sphinx-build",
            "args": [
                "docs",
                "docs/_build/html"
            ],
            "justMyCode": false
        },
        {
            "name": "FILER - dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "niagads.open_access_filer_api.core:app",
                "--reload",
                "--env-file",
                "${workspaceFolder}/../filer.env"
                //"--no-reload",
            ],
            "jinja": true,
            "justMyCode": false
        },
        /*{
            "name": "FAST-API - plus dependencies",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload"
                //"--no-reload",
            ],
            "jinja": true,
            "justMyCode": false
        }*/
    ]
}